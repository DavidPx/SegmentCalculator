<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="net.tracezero.android.segmentcalculator.DesignEntryActivity">

    <!--
    This layout is a two-pane layout for the Designs
    master/detail flow.

    -->

    <FrameLayout
        android:id="@+id/design_entry_container"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:context="net.tracezero.android.segmentcalculator.DesignEntryActivity"
        >
        <include layout="@layout/design_entry_content" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/design_preview_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>